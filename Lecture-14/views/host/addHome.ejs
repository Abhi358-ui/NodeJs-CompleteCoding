<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register Your Home</title>
    <link rel="stylesheet" href="/output.css" />
  </head>
  <body class="bg-gray-50 min-h-screen flex flex-col items-center justify-center">

    <div class="bg-white shadow-xl rounded-lg p-8 w-full max-w-xl">
      <h1 class="text-2xl font-semibold text-indigo-700 mb-6 text-center">üè° Register Your Home</h1>

      <form action="/host/add-home" method="POST" class="space-y-5">
        <!-- Home Name -->
        <div>
          <label class="block text-gray-700 mb-1">Home Name</label>
          <input
            type="text"
            name="houseName"
            placeholder="Enter your home name"
            class="w-full p-3 border border-indigo-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-400"
            required
          />
        </div>

        <!-- Price -->
        <div>
          <label class="block text-gray-700 mb-1">Price (in ‚Çπ)</label>
          <input
            type="number"
            name="price"
            placeholder="Enter house price"
            class="w-full p-3 border border-indigo-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-400"
            required
          />
        </div>

        <!-- Location -->
        <div>
          <label class="block text-gray-700 mb-1">Location</label>
          <input
            type="text"
            name="location"
            placeholder="Enter location"
            class="w-full p-3 border border-indigo-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-400"
            required
          />
        </div>

        <!-- Rating -->
        <div>
          <label class="block text-gray-700 mb-1">Rating (1 to 5)</label>
          <input
            type="number"
            name="ratting"
            placeholder="Enter rating"
            min="1"
            max="5"
            class="w-full p-3 border border-indigo-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-400"
            required
          />
        </div>

        <!-- Image URL -->
        <div>
          <label class="block text-gray-700 mb-1">Image URL</label>
          <input
            type="url"
            name="image"
            placeholder="https://example.com/image.jpg"
            class="w-full p-3 border border-indigo-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-400"
            required
          />
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <input
            type="submit"
            value="Register Home"
            class="bg-indigo-600 text-white px-6 py-2 rounded-xl font-medium hover:bg-indigo-700 transition duration-300"
          />
        </div>
      </form>
    </div>
  </body>
</html>
